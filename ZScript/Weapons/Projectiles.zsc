// Buster shots and puffs
class BusterPuffBase : Actor
{
	Default
	{
		+FORCEXYBILLBOARD
		+NOBLOCKMAP
		+NOGRAVITY
		+ALLOWPARTICLES
		+PUFFONACTORS
	}
	States
	{
		Spawn:
			PUFF ABCD 4 Bright;
			Stop;
	}
}

