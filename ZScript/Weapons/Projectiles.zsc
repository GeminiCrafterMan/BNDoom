class UnchargedBusterTracer : FastProjectile
{
	Default
	{
		Projectile;
		+RANDOMIZE
		+FORCEXYBILLBOARD
		+DONTSPLASH
		//+BLOODSPLATTER 
		+NOEXTREMEDEATH
		Damage 1;
		Radius 2;
		Height 2;
		Speed 140;
		RenderStyle "Translucent";
		Alpha 0.75;
		Scale .15;
		Obituary "%o was tickled to death by %k's uncharged buster shot.";
		DeathSound "weapons/hit";
	}
	States
	{
		Spawn:
			BNTR A 1 Bright;
			Loop;
		Death:
			TNT1 A 0 A_SpawnItemEx("UnchargedBusterPuff");
			Stop;
	}
}

