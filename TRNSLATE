				"13:14=[16,48,144]:[16,40,88]", "15:15=[24,32,40]:[24,32,40]",	// Arm
				"9:10=[247,235,222]:[247,219,0]", "11:12=[255,186,0]:[255,146,0]"	// Muzzle flash
				
