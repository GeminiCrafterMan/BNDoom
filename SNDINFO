// Menu sounds
menu/activate		"Sounds/Menus/menu_open.wav"			// activate a new menu
menu/backup			"Sounds/Menus/card_cancel.wav"			// backup to previous menu
menu/prompt			"Sounds/Menus/card_desc.wav"			// activate a prompt "menu" (what)
menu/cursor			"Sounds/Menus/card_select.wav"			// move cursor up/down
menu/change			"Sounds/Menus/card_select.wav"			// select new value for option
menu/invalid		"Sounds/Menus/card_error.wav"			// menu not available
menu/dismiss		"Sounds/Menus/card_desc_close.wav"		// dismiss a prompt message
menu/choose			"Sounds/Menus/card_choose.wav"			// choose a menu item
menu/clear			"Sounds/Menus/card_desc_close.wav"		// close top menu
menu/pause			"Sounds/Menus/pause.wav"				// pause game
menu/text			"Sounds/Menus/text.wav"					// text beep

$limit	menu/activate	0
$limit	menu/backup		0
$limit	menu/prompt		0
$limit	menu/cursor		0
$limit	menu/change		0
$limit	menu/invalid	0
$limit	menu/dismiss	0
$limit	menu/choose		0
$limit	menu/clear		0